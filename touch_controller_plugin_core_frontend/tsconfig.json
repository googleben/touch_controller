{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "esnext",
        "jsx": "react",
        "allowJs": false,
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "strictNullChecks": true,
        "lib": ["es6", "dom", "es2016", "es2017", "es2018", "es2019", "es2020"],
        "allowSyntheticDefaultImports": true
    }
}